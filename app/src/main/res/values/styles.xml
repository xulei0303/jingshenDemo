<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="replace" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="DreamSeekbar" parent="@android:style/Widget.Material.SeekBar">
        <item name="android:progressDrawable">@drawable/bottom_progress_bar</item>
        <item name="android:thumb">@drawable/dream_seekbar_thumb_material_anim</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:shadowColor">#7f000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:splitTrack">false</item>
        <!-- <item name="android:thumb">@drawable/thumb</item> -->
    </style>

    <style name="DreamSeekbarExceptMaualModule" parent="DreamSeekbar">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <!-- <item name="android:thumb">@drawable/thumb</item> -->
    </style>

    <!-- @} -->
    <style name="Theme.Refocus" parent="Theme.GalleryBase">
        <item name="android:displayOptions"></item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/Holo.RefocusActionBar</item>
        <item name="android:windowBackground">@android:color/black</item>
        <!-- <item name="android:colorBackground">@null</item> -->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/btn_quit_selector</item>
    </style>

    <style name="Holo.RefocusActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:displayOptions"></item>
        <item name="android:background">@mipmap/actionbar_translucent</item>
        <item name="android:backgroundStacked">@null</item>
    </style>


    <style name="Theme.GalleryBase" parent="android:Theme.Holo">
        <item name="listPreferredItemHeightSmall">48dp</item>
        <item name="switchStyle">@android:style/Widget.CompoundButton</item>
    </style>

</resources>
